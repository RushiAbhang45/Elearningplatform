<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                        secondary: '#1e40af',
                        accent: '#f59e0b'
                    }
                }
            }
        }
    </script>
    <style>
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .hover-lift {
            transition: transform 0.2s ease-in-out;
        }

            .hover-lift:hover {
                transform: translateY(-2px);
            }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-lg border-b border-gray-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-primary flex items-center hover:text-secondary transition duration-200">
                        <i class="fas fa-graduation-cap mr-2"></i>
                        EduPlatform
                    </a>
                </div>

                <div class="flex items-center space-x-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="hidden md:flex items-center space-x-6">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Admin" asp-action="Index" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-tachometer-alt mr-1"></i>Dashboard
                                </a>
                                <a asp-controller="Admin" asp-action="Classes" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-school mr-1"></i>Classes
                                </a>
                                <a asp-controller="Admin" asp-action="Users" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-users mr-1"></i>Users
                                </a>
                            }
                            else if (User.IsInRole("Teacher"))
                            {
                                <a asp-controller="Teacher" asp-action="Index" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-tachometer-alt mr-1"></i>Dashboard
                                </a>
                                <a asp-controller="Teacher" asp-action="Content" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-book mr-1"></i>Content
                                </a>
                                <a asp-controller="Teacher" asp-action="Notices" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-bullhorn mr-1"></i>Notices
                                </a>
                            }
                            else if (User.IsInRole("Student"))
                            {
                                <a asp-controller="Student" asp-action="Index" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-tachometer-alt mr-1"></i>Dashboard
                                </a>
                                <a asp-controller="Student" asp-action="Progress" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-chart-line mr-1"></i>Progress
                                </a>
                                <a asp-controller="Student" asp-action="Notices" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-bell mr-1"></i>Notices
                                </a>
                            }
                            else if (User.IsInRole("Parent"))
                            {
                                <a asp-controller="Parent" asp-action="Index" class="text-gray-700 hover:text-primary transition duration-200">
                                    <i class="fas fa-tachometer-alt mr-1"></i>Dashboard
                                </a>
                            }
                        </div>

                        <div class="relative" x-data="{ open: false }">
                            <button @@click ="open = !open" class="flex items-center text-gray-700 hover:text-primary transition duration-200 bg-gray-100 rounded-full px-3 py-2">
                                <i class="fas fa-user-circle text-xl mr-2"></i>
                                <span class="hidden sm:block">@User.Identity.Name</span>
                                <i class="fas fa-chevron-down ml-2 text-xs"></i>
                            </button>
                            <div x-show="open"
                                 @@click.away ="open = false"
                                 x-transition:enter="transition ease-out duration-200"
                                 x-transition:enter-start="opacity-0 transform scale-95"
                                 x-transition:enter-end="opacity-100 transform scale-100"
                                 x-transition:leave="transition ease-in duration-75"
                                 x-transition:leave-start="opacity-100 transform scale-100"
                                 x-transition:leave-end="opacity-0 transform scale-95"
                                 class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-1 z-50 border border-gray-200">
                                <a asp-controller="Account" asp-action="Profile"
                                   class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition duration-200">
                                    <i class="fas fa-user mr-2"></i>Profile
                                </a>
                                <hr class="my-1">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="block">
                                    <button type="submit" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition duration-200">
                                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="flex space-x-2">
                            <a asp-controller="Account" asp-action="Login"
                               class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-secondary transition duration-200 flex items-center">
                                <i class="fas fa-sign-in-alt mr-1"></i>Login
                            </a>
                            <a asp-controller="Account" asp-action="Register"
                               class="bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300 transition duration-200 flex items-center">
                                <i class="fas fa-user-plus mr-1"></i>Register
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg m-4 fade-in" role="alert">
            <div class="flex items-center">
                <i class="fas fa-check-circle mr-2"></i>
                <span>@TempData["Success"]</span>
                <button onclick="this.parentElement.parentElement.remove()" class="ml-auto">
                    <i class="fas fa-times text-green-500 hover:text-green-700"></i>
                </button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg m-4 fade-in" role="alert">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <span>@TempData["Error"]</span>
                <button onclick="this.parentElement.parentElement.remove()" class="ml-auto">
                    <i class="fas fa-times text-red-500 hover:text-red-700"></i>
                </button>
            </div>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded-lg m-4 fade-in" role="alert">
            <div class="flex items-center">
                <i class="fas fa-exclamation-triangle mr-2"></i>
                <span>@TempData["Warning"]</span>
                <button onclick="this.parentElement.parentElement.remove()" class="ml-auto">
                    <i class="fas fa-times text-yellow-500 hover:text-yellow-700"></i>
                </button>
            </div>
        </div>
    }

    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 text-white py-8 mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-4 flex items-center">
                        <i class="fas fa-graduation-cap mr-2"></i>EduPlatform
                    </h3>
                    <p class="text-gray-300">Transforming education through technology and innovation.</p>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2 text-gray-300">
                        <li><a href="#" class="hover:text-white transition duration-200">About Us</a></li>
                        <li><a href="#" class="hover:text-white transition duration-200">Contact</a></li>
                        <li><a href="#" class="hover:text-white transition duration-200">Help</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">For Educators</h4>
                    <ul class="space-y-2 text-gray-300">
                        <li><a href="#" class="hover:text-white transition duration-200">Teacher Resources</a></li>
                        <li><a href="#" class="hover:text-white transition duration-200">Training</a></li>
                        <li><a href="#" class="hover:text-white transition duration-200">Support</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Connect</h4>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-300 hover:text-white transition duration-200">
                            <i class="fab fa-facebook text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-300 hover:text-white transition duration-200">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-300 hover:text-white transition duration-200">
                            <i class="fab fa-linkedin text-xl"></i>
                        </a>
                    </div>
                </div>
            </div>
            <hr class="my-8 border-gray-700">
            <div class="text-center text-gray-300">
                <p>&copy; 2025 EduPlatform. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Global Scripts -->
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('[role="alert"]');
            alerts.forEach(alert => {
                alert.style.transition = 'opacity 0.5s ease-out';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);

        // Add loading states to forms
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function() {
                    const submitBtn = form.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Processing...';
                    }
                });
            });
        });
    </script>
</body>
</html>